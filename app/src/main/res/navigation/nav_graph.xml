<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/startScreenFragment">

    <fragment
        android:id="@+id/startScreenFragment"
        android:name="com.example.gmk.StartScreenFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_start_screen">
        <action
            android:id="@+id/action_startScreenFragment_to_colorListFragment"
            app:destination="@id/colorListFragment" />
    </fragment>
    <fragment
        android:id="@+id/colorListFragment"
        android:name="com.example.gmk.ColorListFragment"
        android:label="@string/color_list_fragment_label"
        tools:layout="@layout/fragment_color_list">
        <action
            android:id="@+id/action_colorListFragment_to_wordListFragment"
            app:destination="@id/wordListFragment" />
    </fragment>
    <fragment
        android:id="@+id/wordListFragment"
        android:name="com.example.gmk.WordListFragment"
        android:label="@string/potion"
        tools:layout="@layout/fragment_word_list">
        <argument
            android:name="number"
            app:argType="integer" />
    </fragment>
</navigation>