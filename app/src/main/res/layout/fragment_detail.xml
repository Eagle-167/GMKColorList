<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".colorfrag.GreenFragment">


    <ImageView
        android:id="@+id/new_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:paddingBottom="10dp"
        android:src="@drawable/grey"
        app:layout_constraintBottom_toTopOf="@+id/view_space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_space"
        android:layout_width="380dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_images" />



    <TextView
        android:id="@+id/titles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/grey"
        android:padding="4dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/view_space"
        app:layout_constraintTop_toTopOf="@+id/view_space" />

    <TextView
        android:id="@+id/prices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textColor="@color/grey"
        android:textStyle="bold"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="@+id/view_space"
        app:layout_constraintTop_toBottomOf="@+id/titles" />


    <!--
    <TextView
        android:id="@+id/infos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the Description"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="@+id/view_space"
        app:layout_constraintTop_toBottomOf="@+id/prices" />

        -->




</androidx.constraintlayout.widget.ConstraintLayout>