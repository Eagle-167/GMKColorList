<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >



    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/new_image"
        android:layout_width="97dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/new_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="GMK"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/new_image"
        app:layout_constraintTop_toTopOf="@+id/new_image" />



    <TextView
        android:id="@+id/new_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="$$$"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_margin="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/new_image"
        app:layout_constraintTop_toBottomOf="@+id/new_title" />

    <!-- Border/divider for keycap list -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background= "@color/light_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_image"/>


</androidx.constraintlayout.widget.ConstraintLayout>